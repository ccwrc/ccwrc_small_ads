{% extends "::base.html.twig" %}

{% block title %}SmallAdsBundle:Ad:showAllAds{% endblock %}

{% block body %}

    {% include 'SmallAdsBundle:Ad:ad_menu.html.twig' %}

    <h1>Welcome to the Ad:showAllAds page</h1>

    Wybierz kategorię ogłoszeń 
    <select name="Wybierz kategorię" onchange="location = this.value;">
        <option>z listy</option>
        {% for category in categories %}
            <option value="{{ path("smallads_ad_showalladsbycategory", {"id":category.id}) }}">
                {{ category.name }} 
            </option>
        {% else %}
            Brak zapisanych kategorii
        {% endfor %}
    </select> <br/><br/>

    {% for ad in ads %}
        <a href="{{ path("smallads_ad_showad", {"id":ad.id}) }}">({{ ad.category }}) {{ ad.title }}</a>
        <hr/>
    {% else %}
        Brak aktualnych ogłoszeń
    {% endfor %}

{% endblock %}
